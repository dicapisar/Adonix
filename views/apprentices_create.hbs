        var identification = document.getElementById("identification");
        var idCCMS = document.getElementById("idCcms");
        var name = document.getElementById("name");
        var group = document.getElementById("group");
        var ceco = document.getElementById("ceco");
        var jobDescription = document.getElementById("jobDescription");
        var relatedPosition = document.getElementById("relatedPosition");
        var payment = document.getElementById("payment");
        var birthday = document.getElementById("birthday");
        var address = document.getElementById("address");
        var email = document.getElementById("email");
        var eps = document.getElementById("eps");
        var institution = document.getElementById("institution");
        var specility = document.getElementById("specility");
        var nameBoss = document.getElementById("nameBoss");
        var ccmsBoss = document.getElementById("ccmsBoss");
        var company = document.getElementById("company");
        var contratStartDate = document.getElementById("contratStartDate");
        var endDateStudy = document.getElementById("endDateStudy");
        var productiveStartDate = document.getElementById("productiveStartDate");
