        }
        if (productiveStartDate.value == "") {
            productiveStartDate.classList.add("invalid");
            isFormValid = false;
        }
        if (productiveEndDate.value == "") {
            productiveEndDate.classList.add("invalid");
            isFormValid = false;
        }
        if (phoneNumber.value == "") {
            phoneNumber.classList.add("invalid");
            isFormValid = false;
        }

        var isValidDates = validateDates();

        if (isValidDates) {
            if (isFormValid ) {
                document.getElementById("createNewApprentice").submit();
            } else {
                $("#formInvalid").modal('show');
            }
        }
    }

    function validateInput(inputId) {
        var inputToValidate = document.getElementById(inputId);

        if (inputToValidate.value == "") {
            inputToValidate.classList.add("invalid");
        } else {
            inputToValidate.classList.remove("invalid")
        }
    }

    function validateDates() {
        var contratStartDate = document.getElementById("contratStartDate");
        var endDateStudy = document.getElementById("endDateStudy");
        var productiveStartDate = document.getElementById("productiveStartDate");
        var productiveEndDate = document.getElementById("productiveEndDate");

        var fechaContratStart = new Date(contratStartDate.value + 'T00:00');
        var fechaSturdyEnd = new Date(endDateStudy.value + 'T00:00');
        var fechaProductiveStart = new Date(productiveStartDate.value + 'T00:00');
        var fechaProductiveEnd = new Date(productiveEndDate.value + 'T00:00');

        if (fechaContratStart > fechaSturdyEnd || fechaSturdyEnd > fechaProductiveStart || fechaProductiveStart > fechaProductiveEnd) {
            contratStartDate.classList.add("invalid");
            endDateStudy.classList.add("invalid");
            productiveStartDate.classList.add("invalid");
            productiveEndDate.classList.add("invalid");

            $("#dateError").modal('show');

            return false;
        }

        return true;
    }

