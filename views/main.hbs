<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">Welcome to Adonix</h3>
                    <h6 class="font-weight-normal mb-0">All systems are running smoothly!</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card {{paramDay}}">
                <div class="card-people">
                    <img src="images/dashboard/people.png" alt="people" style="margin-top: 10%;">
                    <div class="weather-info">
                        <div class="d-flex">
                            <div class="container">
                                <img src="https://openweathermap.org/img/wn/{{iconWeather}}@2x.png" alt="iconWeather"
                                    style="display: block; ">
                            </div>
                            <div class="container">
                                <div>
                                    <h2 class="mb-0 font-weight-normal text-light"> {{tempWeather}}<sup>C</sup></h2>
                                </div>
                                <div class="">
                                    <h4 class="location font-weight-normal text-light">Bogotá</h4>
                                    <h6 class="font-weight-normal text-light">Colombia</h6>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin transparent">
            <div class="row">
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-tale">
                        <div class="card-body">
                            <p class="mb-4">Cantidad de Aprendices</p>
                            <p class="fs-30 mb-2">{{coutApprentices}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-dark-blue">
                        <div class="card-body">
                            <p class="mb-4">Cantidad de Modificaciones</p>
                            <p class="fs-30 mb-2">{{countModifications}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                    <div class="card card-light-blue">
                        <div class="card-body">
                            <p class="mb-4">Cantidad de Aprendices Ingresados</p>
                            <p class="fs-30 mb-2">{{countApprendicesNearingLeave}}</p>
                            <p>En los últimos 30 días</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 stretch-card transparent">
                    <div class="card card-light-danger">
                        <div class="card-body">
                            <p class="mb-4">Cantidad de Aprendices Próximos a Terminar</p>
                            <p class="fs-30 mb-2">{{lastestApprenticeship}}</p>
                            <p>En los siguientes 30 días</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>